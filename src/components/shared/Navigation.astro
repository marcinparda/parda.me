---
import NavigationLink from "./NavigationLink.astro";
const links = [
  { href: "/about", text: "About" },
  { href: "/blog", text: "Blog" },
  { href: "/newsletter", text: "News" },
  { href: "/work", text: "Work" },
];
---

<nav class="inline-flex md:flex-col md:pr-12 gap-3 pb-8 md:pb-0">
  {links.map((link) => <NavigationLink href={link.href} text={link.text} />)}
</nav>
